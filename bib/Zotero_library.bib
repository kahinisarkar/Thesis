@article{carninciGenomewideAnalysisMammalian2006,
  title = {Genome-Wide Analysis of Mammalian Promoter Architecture and Evolution},
  author = {Carninci, Piero and Sandelin, Albin and Lenhard, Boris and Katayama, Shintaro and Shimokawa, Kazuro and Ponjavic, Jasmina and Semple, Colin A.M. and Taylor, Martin S. and Engstr{\"o}m, P{\"a}r G. and Frith, Martin C. and Forrest, Alistair R.R. and Alkema, Wynand B. and Tan, Sin Lam and Plessy, Charles and Kodzius, Rimantas and Ravasi, Timothy and Kasukawa, Takeya and Fukuda, Shiro and {Kanamori-Katayama}, Mutsumi and Kitazume, Yayoi and Kawaji, Hideya and Kai, Chikatoshi and Nakamura, Mari and Konno, Hideaki and Nakano, Kenji and {Mottagui-Tabar}, Salim and Arner, Peter and Chesi, Alessandra and Gustincich, Stefano and Persichetti, Francesca and Suzuki, Harukazu and Grimmond, Sean M. and Wells, Christine A. and Orlando, Valerio and Wahlestedt, Claes and Liu, Edison T. and Harbers, Matthias and Kawai, Jun and Bajic, Vladimir B. and Hume, David A. and Hayashizaki, Yoshihide},
