  file = {/Users/kahinisarkar/Zotero/storage/5QFGFC5V/Yoshida et al. - 2010 - Actin-Related Protein Arp6 Influences H2A.Z-Depend.pdf}
}

@article{yuanEpiProfileComputationalPlatform2018,
  title = {{{EpiProfile}} 2.0: {{A Computational Platform}} for {{Processing Epi-Proteomics Mass Spectrometry Data}}},
