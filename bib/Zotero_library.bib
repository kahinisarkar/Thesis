@book{chanElegansCondensinComplex2004,
  title = {C. Elegans Condensin Complex Mediates Chromosome Compaction and Chromatid Restructuring during Bivalent Formation in Meiosis},
  author = {Chan, Raymond C and Severson, Aaron F and Meyer, Barbara J},
  year = {2004},
  journal = {West Coast Worm Meeting},
  abstract = {The meiosis cell cycle program allows diploid organisms to produce haploid gametes by directing the successive segregation of homologs and then sister chromatids following a single round of replication. The information to direct homolog disjunction and then sister-chromatid segregation is contained within the highly organized chromosomes in prophase by the time homolog pairs are packaged into compact units called bivalents (1). A bivalent structure is composed of two homologs held in an end-to-end orientation and is produced by a series of hierarchical structural and organizational changes to meiotic chromosomes, including the reciprocal exchange of chromatids (crossover) between homologs in pachytene and the compaction and restructuring of chromatids around the crossover site in diplotene and diakinesis. While a number of genes have been identified that affect bivalent formation through their involvement in crossover formation, little is known about the genes that are responsible for the individualization and compaction of chromatids in diplotene and diakinesis. Long-standing models for bivalent formation propose that chromatid restructuring may be driven by DNA compaction, however experimental proof of these models has been elusive because mutations that specifically affect chromosome compaction in diplotene-diakinesis have been lacking. Nonetheless, candidates for implementing meiotic chromosome compaction at diplotene-diakinesis exist and include members of the conserved condensin protein complexes. In mitosis, condensin activity is required to compact and resolve chromosomes for accurate chromosome segregation, and the depletion of condensin in C. elegans and in other model organisms specifically impedes prophase DNA compaction. The prototypical condensin complex contains at least five subunits, including a pair of s tructural m aintenance of c hromosomes (SMC) proteins, SMC2 and SMC4. The three non-SMC ancillary factors belong to c hromosome- a ssociated p olypeptide CAP-D2, CAP-G and CAP-H/Barren families. The C. elegans SMC homologs, MIX-1 (SMC2) and SMC-4 form a protein complex (2). Although candidates for the C. elegans non-SMC homologs have been identified based on protein sequence homology and mutant phenotype (3,4), their association with this complex has not demonstrated. To define additional condensin genes and to explore condensin's role in meiosis, we set forth to biochemically define factors associated with the MIX-1 in embryonic extracts. We identified the h olocentric c hromosome binding p rotein 6 (HCP-6) (4) as a componentof the MIX-1/SMC-4 condensin complex that functions in chromosome segregation in mitosis and meiosis. Surprisingly, the requirements for condensin assembly on meiotic chromosomes differ from requirements for assembly on mitotic chromosomes. Characterization of HCP-6 and condensin in meiosis showed that condensin functions as a chromosome restructuring factor in diplotene and diakinesis and is required for both homolog and sister-chromatid meiotic divisions. HCP-6's enrichment on DNA was first detected in late prophase after the exit from pachytene. Severe disruption of condensin inhibited chromosome compaction and bivalent formation in diplotene/diakinesis. Interestingly, weak condensin mutations disrupted chromatid structure but did not affect bivalent compaction and formation, thereby demonstrating separable roles for condensin in DNA compaction and restructuring. Most importantly, condensin mutations suppressed the precocious separation of sister chromatids and homologs at diakinesis in mutants defective for sister-chromatid cohesion and crossover recombination, demonstrating condensin's role in resolving sister chromatids and homologs prior to metaphase I. Reference: (1) Paliulis, L.V. \& Nicklas, R.B. 2000. J. Cell Biol. 150, 1223-32. (2) Hagstrom, K.A. et al. 2002. Genes Dev. 16, 729-42. (3) Schleiffer, A. et al. 2003. Mol. Cell 11, 571-5. (4) Stear, J.H. \& Roth, M.B. 2002. Genes Dev. 16, 1498-508.}
}

@article{chapmanNRG1KITLSignal2015,
  title = {{{NRG1}} and {{KITL}} Signal Downstream of Retinoic Acid in the Germline to Support Soma-Free Syncytial Growth of Differentiating Spermatogonia},
  author = {Chapman, Km and Medrano, Ga and Chaudhary, J. and Hamra, Fk},
  year = {2015},
