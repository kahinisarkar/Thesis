@article{yoshidaActinRelatedProteinArp62010,
  title = {Actin-{{Related Protein Arp6 Influences H2A}}.{{Z-Dependent}} and -{{Independent Gene Expression}} and {{Links Ribosomal Protein Genes}} to {{Nuclear Pores}}},
  author = {Yoshida, Takahito and Shimada, Kenji and Oma, Yukako and Kalck, V{\'e}ronique and Akimura, Kazumi and Taddei, Angela and Iwahashi, Hitoshi and Kugou, Kazuto and Ohta, Kunihiro and Gasser, Susan M. and Harata, Masahiko},
