}

@article{hongayDrosophilaInducerMEiosis2011,
  title = {Drosophila {{Inducer}} of {{MEiosis}} 4 ({{IME4}}) Is Required for {{Notch}} Signaling during Oogenesis},
  author = {Hongay, Cintia F and {Orr-Weaver}, Terry L},
  year = {2011},
  month = sep,
  journal = {Proceedings of the National Academy of Sciences of the United States of America},
  edition = {2011/08/22},
  volume = {108},
  number = {36},
  pages = {14855--14860},
