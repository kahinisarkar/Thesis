@article{miyauchiBoneMorphogeneticProtein2017,
  title = {Bone Morphogenetic Protein and Retinoic Acid Synergistically Specify Female Germ-Cell Fate in Mice},
  author = {Miyauchi, Hidetaka and Ohta, Hiroshi and Nagaoka, So and Nakaki, Fumio and Sasaki, Kotaro and Hayashi, Katsuhiko and Yabuta, Yukihiro and Nakamura, Tomonori and Yamamoto, Takuya and Saitou, Mitinori},
