  title = {The Fused/Smurf Complex Controls the Fate of Drosophila Germline Stem Cells by Generating a Gradient Bmp Response},
  author = {Xia, Laixin and Jia, Shunji and Huang, Shoujun and Wang, Hailong and Zhu, Yuanxiang and Mu, Yanjun and Kan, Lijuan and Zheng, Wenjing and Wu, Di and Li, Xiaoming and Sun, Qinmiao and Meng, Anming and Chen, Dahua},
  year = {2010},
