@article{zhangChangesRRNATranscription2014a,
  title = {Changes in {{rRNA}} Transcription Influence Proliferation and Cell Fate within a Stem Cell Lineage},
  author = {Zhang, Qiao and Shalaby, Nevine A and Buszczak, Michael},
  year = {2014},
