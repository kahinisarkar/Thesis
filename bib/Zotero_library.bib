@article{tingControlGermlineStem2013,
  title = {Control of Germline Stem Cell Self-Renewal and Differentiation in the {{Drosophila}} Ovary: Concerted Actions of Niche Signals and Intrinsic Factors},
  shorttitle = {Control of Germline Stem Cell Self-Renewal and Differentiation in the {{Drosophila}} Ovary},
