@article{fellerMOFcontainingNSLComplex2012,
  title = {The {{MOF-containing NSL}} Complex Associates Globally with Housekeeping Genes, but Activates Only a Defined Subset},
  author = {Feller, Christian and Prestel, Matthias and Hartmann, Holger and Straub, Tobias and S{\"o}ding, Johannes and Becker, Peter B.},
  year = {2012},
  journal = {Nucleic Acids Research},
  issn = {03051048},
  doi = {10.1093/nar/gkr869},
  abstract = {The MOF (males absent on the first)-containing NSL (non-specific lethal) complex binds to a subset of active promoters in Drosophila melanogaster and is thought to contribute to proper gene expression. The determinants that target NSL to specific promoters and the circumstances in which the complex engages in regulating transcription are currently unknown. Here, we show that the NSL complex primarily targets active promoters and in particular housekeeping genes, at which it colocalizes with the chromatin remodeler NURF (nucleosome remodeling factor) and the histone methyltransferase Trithorax. However, only a subset of housekeeping genes associated with NSL are actually activated by it. Our analyses reveal that these NSL-activated promoters are depleted of certain insulator binding proteins and are enriched for the core promoter motif 'Ohler 5'. Based on these results, it is possible to predict whether the NSL complex is likely to regulate a particular promoter. We conclude that the regulatory capacity of the NSL complex is highly context-dependent. Activation by the NSL complex requires a particular promoter architecture defined by combinations of chromatin regulators and core promoter motifs. \textcopyright{} 2012 The Author(s).}
}

