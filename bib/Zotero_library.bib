@article{mccarthyMSL3CoordinatesTranscriptional2019,
  title = {{{MSL3}} Coordinates a Transcriptional and Translational Meiotic Program in Female {{Drosophila}}},
  author = {McCarthy, Alicia and Sarkar, Kahini and Martin, Elliot T and Upadhyay, Maitreyi and James, Joshua R and Lin, Jennifer M and Jang, Seoyeon and Williams, Nathan D and Forni, Paolo E and Buszczak, Michael and Rangan, Prashanth},
  year = {2019},
  month = dec,
  journal = {bioRxiv},
  pages = {2019.12.18.879874},
  publisher = {{Cold Spring Harbor Laboratory}},
  doi = {10.1101/2019.12.18.879874},
  abstract = {Gamete formation from germline stem cells (GSCs) is essential for sexual reproduction. However, the regulation of GSC differentiation and meiotic entry are incompletely understood. Set2, which deposits H3K36me3 modifications, is required for differentiation of GSCs during Drosophila oogenesis. We discovered that the H3K36me3 reader Male-specific lethal 3 (MSL3) and the histone acetyltransferase complex Ada2a-containing (ATAC) cooperate with Set2 to regulate entry into meiosis in female Drosophila . MSL3 expression is restricted to the mitotic and early meiotic stages of the female germline, where it promotes transcription of genes encoding synaptonemal complex components and a germline enriched ribosomal protein S19 paralog, RpS19b . RpS19b upregulation is required for translation of Rbfox1, a known meiotic cell cycle entry factor. Thus, MSL3 is a master regulator of meiosis, coordinating the expression of factors required for recombination and GSC differentiation. We find that MSL3 is expressed during mouse spermatogenesis, suggesting a conserved function during meiosis.}
}

