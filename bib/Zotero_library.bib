@article{gorjanaczCaenorhabditisElegansBAF12007,
  title = {Caenorhabditis Elegans {{BAF-1}} and Its Kinase {{VRK-1}} Participate Directly in Post-Mitotic Nuclear Envelope Assembly},
  author = {Gorj{\'a}n{\'a}cz, M{\'a}ty{\'a}s and Klerkx, Elke P.F. and Galy, Vincent and Santarella, Rachel and {L{\'o}pez-Iglesias}, Carmen and Askjaer, Peter and Mattaj, Iain W.},
  year = {2007},
  journal = {EMBO Journal},
  issn = {02614189},
  doi = {10.1038/sj.emboj.7601470},
  abstract = {Barrier-to-autointegration factor (BAF) is an essential, highly conserved, metazoan protein. BAF interacts with LEM (LAP2, emerin, MAN1) domain-carrying proteins of the inner nuclear membrane. We analyzed the in vivo function of BAF in Caenorhabditis elegans embryos using both RNA interference and a temperature-sensitive baf-1 gene mutation and found that BAF is directly involved in nuclear envelope (NE) formation. NE defects were observed independent of and before the chromatin organization phenotype previously reported in BAF-depleted worms and flies. We identified vaccinia-related kinase (VRK) as a regulator of BAF phosphorylation and localization. VRK localizes both to the NE and chromatin in a cell-cycle-dependent manner. Depletion of VRK results in several mitotic defects, including impaired NE formation and BAF delocalization. We propose that phosphorylation of BAF by VRK plays an essential regulatory role in the association of BAF with chromatin and nuclear membrane proteins during NE formation. \textcopyright{} 2007 European Molecular Biology Organization | All Rights Reserved.},
  pmid = {17170708},
  keywords = {Chromosome segregation,LEM proteins,Mitosis,Nuclear envelope,Nuclear pore complex}
}

@book{gottesfeldMitoticRepressionTranscriptional1997,
