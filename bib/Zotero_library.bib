@article{bianSgf29BindsHistone2011,
  title = {Sgf29 Binds Histone {{H3K4me2}}/3 and Is Required for {{SAGA}} Complex Recruitment and Histone {{H3}} Acetylation},
  author = {Bian, Chuanbing and Xu, Chao and Ruan, Jianbin and Lee, Kenneth K. and Burke, Tara L. and Tempel, Wolfram and Barsyte, Dalia and Li, Jing and Wu, Minhao and Zhou, Bo O. and Fleharty, Brian E. and Paulson, Ariel and {Allali-Hassani}, Abdellah and Zhou, Jin Qiu and Mer, Georges and Grant, Patrick A. and Workman, Jerry L. and Zang, Jianye and Min, Jinrong},
