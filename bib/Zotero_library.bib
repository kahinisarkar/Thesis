  keywords = {Crm1,Drosophila germline,heterochromatin,NXF proteins,piRNA cluster,piRNA pathway,RNA export,RNA surveillance,transposon control,UAP56},
  file = {/Users/kahinisarkar/Zotero/storage/GG39WWJI/ElMaghraby et al. - 2019 - A Heterochromatin-Specific RNA Export Pathway Faci.pdf}
}

