@book{proudfootTranscriptionalTerminationMammals2016,
  title = {Transcriptional Termination in Mammals: {{Stopping}} the {{RNA}} Polymerase {{II}} Juggernaut},
  author = {Proudfoot, Nick J.},
  year = {2016},
  journal = {Science},
  issn = {10959203},
  doi = {10.1126/science.aad9926},
  abstract = {Terminating transcription is a highly intricate process for mammalian protein-coding genes. First, the chromatin template slows down transcription at the gene end. Then, the transcript is cleaved at the poly(A) signal to release the messenger RNA. The remaining transcript is selectively unraveled and degraded. This induces critical conformational changes in the heart of the enzyme that trigger termination. Termination can also occur at variable positions along the gene and so prevent aberrant transcript formation or intentionally make different transcripts. These may form multiple messenger RNAs with altered regulatory properties or encode different proteins. Finally, termination can be perturbed to achieve particular cellular needs or blocked in cancer or virally infected cells. In such cases, failure to terminate transcription can spell disaster for the cell.}
}

@article{pughTranscriptionTATAlessPromoter1991,
