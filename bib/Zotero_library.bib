@article{timmsATF7IPMediatedStabilizationHistone2016,
  title = {{{ATF7IP-Mediated Stabilization}} of the {{Histone Methyltransferase SETDB1 Is Essential}} for {{Heterochromatin Formation}} by the {{HUSH Complex}}},
