@article{kochWindeiDrosophilaHomolog2009,
  title = {Windei, the {{Drosophila Homolog}} of {{mAM}}/{{MCAF1}}, {{Is}} an {{Essential Cofactor}} of the {{H3K9 Methyl Transferase dSETDB1}}/{{Eggless}} in {{Germ Line Development}}},
