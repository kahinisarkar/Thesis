@article{wojtasRegulationM6ATranscripts2017,
  title = {Regulation of {{m6A Transcripts}} by the 3'\textrightarrow 5' {{RNA Helicase YTHDC2 Is Essential}} for a {{Successful Meiotic Program}} in the {{Mammalian Germline}}},
