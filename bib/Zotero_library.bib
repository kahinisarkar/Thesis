}

@article{toczyskiEpsteinBarrVirusEBV1994,
  title = {The {{Epstein-Barr}} Virus ({{EBV}}) Small {{RNA EBER1}} Binds and Relocalizes Ribosomal Protein {{L22}} in {{EBV-infected}} Human {{B}} Lymphocytes.},
  author = {Toczyski, D P and Matera, A G and Ward, D C and Steitz, J A},
